static bool create_proc_oom_test(void) {
    frame_alloc_set_oom_simulation(true);
    TEST_ASSERT(!create_proc());
    TEST_ASSERT(!create_kproc(NULL, NULL));
    frame_alloc_set_oom_simulation(false);
